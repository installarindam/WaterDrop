<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom style for the search view -->
    <style name="SearchViewStyle">
        <item name="android:background">@drawable/search_view_bg</item>
    </style>

    <!-- Custom style for the spinner -->
    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

    <!-- Custom style for the list item -->
    <style name="ListItemStyle">
        <item name="android:background">@drawable/list_item_bg</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>

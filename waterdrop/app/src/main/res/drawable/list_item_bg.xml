<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0"/> <!-- Light gray background color when pressed -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke android:color="#BDBDBD" android:width="1dp"/> <!-- Border color and width -->
        </shape>
    </item>
</selector>
